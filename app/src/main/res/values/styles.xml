<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A5D6A7</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="EditStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mygrey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/textXS</item>
    </style>

    <style name="TextStyle" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mygrey</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextMain" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mygrey</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
